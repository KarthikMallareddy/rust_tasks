# Build stage
FROM node:20-alpine AS builder

WORKDIR /app

# Copy package files first
COPY package*.json ./
COPY packages/crypto-engine/package*.json ./packages/crypto-engine/

# Install ALL dependencies (including devDependencies for TypeScript)
RUN npm install

# Copy and build crypto-engine
COPY packages/crypto-engine ./packages/crypto-engine
RUN cd packages/crypto-engine && npm run build

# Copy remaining source files
COPY app ./app
COPY components ./components
COPY hooks ./hooks
COPY lib ./lib
COPY next.config.mjs tsconfig.json postcss.config.mjs components.json ./

# Copy public folder if it exists (optional)
COPY --chown=root:root public* ./public/

# Build the Next.js app
RUN npm run build

# Production stage
FROM node:20-alpine

WORKDIR /app

RUN apk add --no-cache dumb-init

# Copy package files
COPY package*.json ./
COPY packages/crypto-engine/package*.json ./packages/crypto-engine/

# Copy pre-built crypto-engine from builder
COPY --from=builder /app/packages/crypto-engine/dist ./packages/crypto-engine/dist

# Install production dependencies only
RUN npm install --omit=dev

# Copy built Next.js app
COPY --from=builder /app/.next ./.next
COPY --from=builder /app/public ./public
COPY next.config.mjs ./

RUN addgroup -g 1001 -S nodejs && \
    adduser -S nodejs -u 1001

USER nodejs

EXPOSE 3000

HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD wget --quiet --tries=1 --spider http://localhost:3000/ || exit 1

ENTRYPOINT ["dumb-init", "--"]
CMD ["npm", "start"]
